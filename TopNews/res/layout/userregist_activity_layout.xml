<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:id="@+id/user_regist_lt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/topBar"
            layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/usericon"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_round_head" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/icon_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="打开拍照模式"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/icon_switch"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/choff1" />
            </LinearLayout>

            <EditText
                android:id="@+id/regist_username_edit"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_bg"
                android:hint="输入用户名"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/regist_gender"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_bg"
                android:gravity="center_vertical"
                android:hint="选择性别"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/regist_email_edit"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_bg"
                android:hint="输入邮箱"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/regist_password_edit"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_bg"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="输入密码 长度>=6位"
                android:paddingLeft="10dp"
                android:password="true"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/regist_password_again_edit"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_bg"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="再次输入"
                android:paddingLeft="10dp"
                android:password="true"
                android:textSize="15dp" />

            <Button
                android:id="@+id/regist_finish_btn"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/get_authcode_again_btn_selector2"
                android:text="完成注册"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>