<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
                
        <ImageButton
            android:id="@+id/topBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sl_nav_back"
            android:contentDescription="返回"/>
    
        <TextView
            android:id="@+id/topTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#444444"
            android:text="添加电台"
            android:textSize="20sp"/>  
    </LinearLayout> 
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#FFE7E7E7" />

  <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"       
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="电台名称"
            android:textSize="15sp" />
        
         <EditText
            android:id="@+id/radio_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:hint="请输入电台的名称"
            android:textSize="15sp" />
         
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="添加网络电台的地址，支持mms、rtsp、http协议"
            android:textSize="15sp" />
         
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="horizontal" >
        
            <EditText
                android:id="@+id/radio_url"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:hint="请输入可用的电台URL"
                android:textSize="13sp" />
            
            <ImageView
                android:id="@+id/check_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/check" />           
           </LinearLayout>  
          
           <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation ="horizontal" >
        
             <ImageView
                android:id="@+id/add_icon_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_more_radio_button" />
            
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="上传一个图标"
                android:textSize="15sp" />           
          </LinearLayout>  
        
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="上传一个Bannar大图"
            android:textSize="15sp" /> 
            
          <ImageView
            android:id="@+id/add_pic_button"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/radio_add_pic" />
         
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="电台介绍"
            android:textSize="15sp" />
        
          <EditText
            android:id="@+id/radio_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:hint="请输入电台的介绍"
            android:gravity="top|left"
            android:textSize="15sp" />
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="horizontal" >
            <ImageView
                android:id="@+id/conserve_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/conserve" />
            
            <ImageView
                android:id="@+id/check_result_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/check_result" />  
          </LinearLayout>                 
      </LinearLayout>
 </ScrollView>
</LinearLayout>