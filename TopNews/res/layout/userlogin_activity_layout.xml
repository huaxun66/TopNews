<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_login_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <include
            android:id="@+id/topBar"
            layout="@layout/title_bar" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/login_activity_loginbtn"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/login_account_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/login_edit_bg"
                    android:hint="用户名"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/login_secret_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/login_edit_bg"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/login_activity_loginbtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_btn_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/login_activity_registbtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/regist_btn_selector" />

            <Button
                android:id="@+id/login_activity_searchsecretbtn"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/search_secret_btn_selector" />
        </LinearLayout>

        <com.huaxun.radio.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="还可以选择以下方式登录"
            android:textColor="#BBBBBB"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_sina"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_sina"
                android:gravity="center" />

            <ImageView
                android:id="@+id/btn_tencent"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_tencent"
                android:gravity="center" />

            <ImageView
                android:id="@+id/btn_qq"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_qq"
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/btn_wechat"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/wechat_login"
                android:gravity="center"
                android:singleLine="true"
                android:text="用微信登录"
                android:textColor="@color/white"
                android:textSize="14dp"/>
            

